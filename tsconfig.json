{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
  },
  "exclude": ["node_modules", "build", "dist"],
  "include": ["src/**/*"]
}
